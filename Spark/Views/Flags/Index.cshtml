@model IEnumerable<Spark.Models.Flag>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class="btn btn-success ben-lg" })
</p>
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.SuggestionID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Outcome)
        </th>
  
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Details", "Details", null, new { id=item.ID, @class="btn btn-sm btn-default"})
            @Html.ActionLink("Delete", "Delete", null, new { id=item.ID, @class="btn btn-sm btn-danger"})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SuggestionID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Outcome)
        </td>
    </tr>
}

</table>
